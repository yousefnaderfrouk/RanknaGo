rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile images - users can only upload/read their own profile image
    match /profile_images/{userId}.jpg {
      // Allow read if user is authenticated
      allow read: if request.auth != null;
      
      // Allow write (upload/update/delete) only if:
      // 1. User is authenticated
      // 2. The userId in the path matches the authenticated user's UID
      // 3. File is less than 5MB
      // 4. File is an image (jpg, jpeg, png)
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
      
      // Allow delete only by the owner
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow reading profile images for authenticated users
    match /profile_images/{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
